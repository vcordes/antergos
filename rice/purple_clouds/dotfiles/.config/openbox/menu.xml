<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-term-menu" label="Terminals">
  <item label="Dark">
	  <action name="Execute"><command>termite -c ~/.config/termite/config</command></action>
  </item>
  <item label="Light">
	  <action name="Execute"><command>termite -c ~/.config/termite/config-alt</command></action>
  </item>
</menu>

<menu id="apps-internet-menu" label="Internet">
  <item label="Firefox">
	<action name="Execute"><command>firefox</command></action>
  </item>
</menu>

<menu id="apps-graphics-menu" label="Graphics">
  <item label="Gimp">
	<action name="Execute"><command>gimp</command></action>
  </item>
  <item label="GPick">
	<action name="Execute"><command>gpick</command></action>
  </item>
</menu>

<menu id="apps-office-menu" label="Office">
  <item label="Evince">
	  <action name="Execute"><command>evince</command></action>
  </item>
</menu>

<menu id="system-menu" label="System">
  <item label="Obconf">
    <action name="Execute">
      <command>obconf</command>
    </action>
  </item>
  <item label="Lxappearance">
    <action name="Execute">
      <command>lxappearance</command>
    </action>
  </item>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <menu id="apps-graphics-menu"/>
  <menu id="apps-internet-menu"/>
  <menu id="apps-office-menu"/>
  <menu id="apps-term-menu"/>
  <separator label="System" />
  <menu id="system-menu"/>
  <separator />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
